<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#84000000"
    android:orientation="horizontal"
    android:padding="@dimen/widget_ly_padding">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_global_chat" />

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/widget_linear_layout_left_margin"
        android:layout_marginLeft="@dimen/widget_linear_layout_left_margin">

        <TextView
            android:id="@+id/tv_creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|left"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/widget_no_message_to_display"
            android:textColor="@color/widgetText"
            android:textSize="@dimen/widget_font_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|left"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/widget_no_message_three_dots"
            android:textColor="@color/widgetText"
            android:textSize="@dimen/widget_font_size"
            android:textStyle="normal" />
    </LinearLayout>
</LinearLayout>