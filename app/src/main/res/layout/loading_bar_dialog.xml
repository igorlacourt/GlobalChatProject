<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/logging_in_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/loggin_progress_bar_margin"
        android:layout_gravity="center"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_dialog_loading_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tv_dialog_loading_margin"
        android:layout_marginLeft="@dimen/tv_dialog_loading_margin"
        android:layout_marginEnd="@dimen/tv_dialog_loading_margin"
        android:layout_marginRight="@dimen/tv_dialog_loading_margin"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="@string/dialog_logging_in"
        android:textSize="16sp"/>

</LinearLayout>